{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "cmake-pedantic",
      "hidden": true,
      "warnings": {
        "dev": true,
        "deprecated": true,
        "uninitialized": true,
        "unusedCli": true,
        "systemVars": false
      },
      "errors": {
        "dev": true,
        "deprecated": true
      }
    },
    {
      "name": "ci-build",
      "binaryDir": "${sourceDir}/build",
      "hidden": true
    },
    {
      "name": "ci-win64",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "hidden": true
    },
    {
      "name": "ci-unix",
      "generator": "Ninja",
      "hidden": true
    },
    {
      "name": "ci-windows",
      "inherits": [
        "ci-build",
        "ci-win64"
      ]
    },
    {
      "name": "ci-macos",
      "inherits": [
        "ci-build",
        "ci-unix"
      ]
    },
    {
      "name": "ci-ubuntu",
      "inherits": [
        "ci-build",
        "ci-unix"
      ]
    }
  ]
}